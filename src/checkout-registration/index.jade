                                    input.checkout__carrito__input(type="number" placeholder="1")
                                .checkout__carrito__group-wrapper.checkout__carrito__group-wrapper--align
                                    a.checkout__carrito__link
                                        i.fa.fa-trash
                                .checkout__carrito__group-wrapper
                                    p.checkout__carrito__label Precio
                                    span.checkout__carrito__price $1.129
                        .checkout__carrito__product
                            .checkout__carrito__group
                                .checkout__carrito__image
                                    img(src="/images/pack-pedigree.png")
                                p.checkout__carrito__product-description Pedigree Adulto Carne Pollo Y Cereales
                            .checkout__carrito__group
                                .checkout__carrito__group-wrapper
                                    p.checkout__carrito__label Cantidad
                                    input.checkout__carrito__input(type="number" placeholder="1")
                                .checkout__carrito__group-wrapper.checkout__carrito__group-wrapper--align
                                    a.checkout__carrito__link
                                        i.fa.fa-trash
                                .checkout__carrito__group-wrapper
                                    p.checkout__carrito__label Precio
                                    span.checkout__carrito__price $1.129
                    .col-24.col-sm-6
                        .checkout__carrito__payment-container
                            .checkout__carrito__payment-wrapper
                                p.checkout__carrito__payment-text Subtotal
                                span.checkout__carrito__payment-number $1.129
                            .checkout__carrito__payment-wrapper
                                p.checkout__carrito__payment-text Envío
                                +button('link', 'Calcular', '#', '', '', 'ghost')
                        .checkout__carrito__payment-container.checkout__carrito__payment-container--orange
                            p.checkout__carrito__payment-text.checkout__carrito__payment-text--white Total
                            span.checkout__carrito__payment-number.checkout__carrito__payment-number--white $1.129
                        .checkout__carrito__payment-button
                            +button('link', 'Finalizar compra', '#')
                        .checkout__carrito__payment-button.checkout__carrito__payment-button--hollow
                            +button('link', 'Seguir comprando', '#', '', '', 'ghost')
        
