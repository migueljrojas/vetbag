extends ../_layouts/base

include ../_modules/button/button
include ../_modules/product-slider/product-slider
include ../_modules/slider/slider
include ../_modules/button/button
include ../_modules/product/product

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.checkout
        section.checkout__thanks
            .container
                .row
                    .col-24
                        .row
                            .col-24
                                h2.checkout__thanks__title Gracias por su compra
                                p.checkout__thanks__text Su número de comprobante es:
                                    span  #####
                        .row
                            .col-24.col-sm-18.offset-sm-3
                                h3.checkout__thanks__subtitle Detalle de compra:
                                .checkout__carrito__product
                                    .checkout__carrito__group.checkout__thanks__group
                                        .checkout__thanks__image
                                            img(src="/images/pack-pedigree.png")
                                        .checkout__thanks__container
                                            p.checkout__carrito__product-description Pedigree Adulto Carne Pollo Y Cereales
                                            p.checkout__thanks__quantity Cantidad: 1
                                    .checkout__carrito__group
                                        .checkout__thanks__group-wrapper
                                            p.checkout__carrito__label Precio
                                            span.checkout__carrito__price $1.129

                .row
                    .col-24
                        .row.checkout__login__wrapper
                            .col-24
                                h2.checkout__thanks__title Cuentanos de tu/s mascota
                        .row
                            .col-24.col-sm-18.offset-sm-3
                                form.row.vb-form
                                    .col-24.col-sm-12
                                        .vb-form__group
                                            input.vb-form__input(type="text" placeholder="Me llamo")
                                            label.vb-form__label Me llamo
                                    .col-24.col-sm-12
                                        .vb-form__group
                                            select.vb-form__input.vb-form__input--select
                                                option(selected hidden disabled) Soy un
                                                option Perro
                                                option Gato
                                    .col-24.col-sm-12
                                        .vb-form__group
                                            select.vb-form__input.vb-form__input--select
                                                option(selected hidden disabled) Mi tamaño es...
                                                option Pequeño
                                                option Mediano
                                                option Grande
                                    .col-24.col-sm-12
                                        .vb-form__group
                                            select.vb-form__input.vb-form__input--select
                                                option(selected hidden disabled) Tengo entre...
                                                option 1 y 2 años
                                                option 3 y 5 años
                                                option 6 y 8 años
                                    .col-24.col-sm-12
                                        .vb-form__group
                                            select.vb-form__input.vb-form__input--select
                                                option(selected hidden disabled) Raza
                                                option Mestizo
                                                option Puro
                            .col-24
                                .checkout__login__container
                                    +button('link', 'Registrar mascota', '#', '', '', '')
